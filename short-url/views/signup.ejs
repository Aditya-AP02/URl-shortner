<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join URL Shortener üîó</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 30%, #667eea 70%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        /* ‚úÖ FIXED: Higher z-index + Better visibility */
        .floating-link,
        .dot {
            position: fixed;
            z-index: 2;
            /* ABOVE background, BELOW form */
        }

        /* 5 CHAINS */
        .floating-link.chain {
            width: 3px;
            height: 70px;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.8), transparent);
            border-radius: 3px;
            animation: float 6s ease-in-out infinite;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.6);
        }

        /* 4 URL BOXES */
        .floating-link.url {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(20px);
            border-radius: 25px;
            padding: 10px 18px;
            font-size: 12px;
            color: white;
            font-family: 'Courier New', monospace;
            font-weight: 600;
            border: 1px solid rgba(255, 255, 255, 0.4);
            animation: pulse 4s ease-in-out infinite;
            white-space: nowrap;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        /* 3 DOTS */
        .dot {
            width: 10px;
            height: 10px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            animation: dotFloat 7s ease-in-out infinite;
            box-shadow: 0 0 12px rgba(255, 255, 255, 0.7);
        }

        /* ANIMATIONS */
        @keyframes float {

            0%,
            100% {
                transform: translateY(0)rotate(0deg);
                opacity: 0.7
            }

            50% {
                transform: translateY(-30px)rotate(15deg);
                opacity: 1
            }
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1);
                opacity: 0.9
            }

            50% {
                transform: scale(1.15);
                opacity: 1
            }
        }

        @keyframes dotFloat {

            0%,
            100% {
                transform: translateY(0)scale(1);
                opacity: 0.8
            }

            50% {
                transform: translateY(-20px)scale(1.4);
                opacity: 1
            }
        }

        /* ‚úÖ 12 VISIBLE FLOATING LINKS */
        .floating-link.chain:nth-child(1) {
            top: 5%;
            left: 5%;
            animation-delay: 0s;
            height: 90px
        }

        .floating-link.chain:nth-child(2) {
            top: 25%;
            right: 5%;
            animation-delay: 1s;
            height: 80px
        }

        .floating-link.chain:nth-child(3) {
            top: 55%;
            left: 8%;
            animation-delay: 2s;
            height: 70px
        }

        .floating-link.chain:nth-child(4) {
            top: 75%;
            right: 10%;
            animation-delay: 3s;
            height: 85px
        }

        .floating-link.chain:nth-child(5) {
            bottom: 20%;
            left: 12%;
            animation-delay: 4s;
            height: 75px
        }

        .floating-link.url:nth-child(6) {
            top: 12%;
            left: 20%;
            animation-delay: 0.5s
        }

        .floating-link.url:nth-child(7) {
            top: 38%;
            right: 20%;
            animation-delay: 1.3s
        }

        .floating-link.url:nth-child(8) {
            bottom: 28%;
            left: 25%;
            animation-delay: 2s
        }

        /* ‚úÖ HALF UNDER FORM */
        .floating-link.url:nth-child(9) {
            top: 48%;
            left: 48%;
            animation-delay: 2.5s;
            transform: scale(0.8);
            z-index: 1
        }

        .floating-link.url:nth-child(10) {
            bottom: 22%;
            right: 48%;
            animation-delay: 3s;
            transform: scale(0.8);
            z-index: 1
        }

        .dot:nth-child(11) {
            top: 30%;
            left: 30%;
            animation-delay: 1s
        }

        .dot:nth-child(12) {
            top: 70%;
            right: 30%;
            animation-delay: 2.5s
        }

        /* COMPACT FORM */
        .container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(25px);
            padding: 25px 35px;
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 480px;
            border: 1px solid rgba(255, 255, 255, 0.4);
            position: relative;
            z-index: 10;
            /* ABOVE links */
            max-height: 75vh;
            overflow-y: hidden;
        }

        h2 {
            text-align: center;
            margin: 0 0 20px 0;
            color: #1e3c72;
            font-size: 28px;
            font-weight: 800;
        }

        h2::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 2px;
        }

        .form-group {
            margin-bottom: 16px;
        }

        label {
            display: block;
            margin-bottom: 6px;
            color: #2a5298;
            font-weight: 600;
            font-size: 14px;
        }

        input {
            width: 100%;
            padding: 12px 14px;
            border: 2px solid #e8ecf4;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: white;
        }

        input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
            transform: translateY(-1px);
        }

        button {
            width: 100%;
            padding: 14px;
            margin-top: 8px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(102, 126, 234, 0.4);
        }

        .error {
            color: #e74c3c;
            font-size: 13px;
            margin-top: 4px;
            display: block;
        }

        #message {
            margin-top: 15px;
            padding: 10px;
            border-radius: 10px;
            text-align: center;
            font-weight: 500;
            font-size: 14px;
            min-height: 20px;
        }

        .login-link {
            text-align: center;
            margin-top: 18px;
            font-size: 14px;
            color: #666;
        }

        .login-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .login-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- ‚úÖ 12 FLOATING LINKS NOW VISIBLE -->
    <div class="floating-link chain"></div>
    <div class="floating-link chain"></div>
    <div class="floating-link chain"></div>
    <div class="floating-link chain"></div>
    <div class="floating-link chain"></div>

    <div class="floating-link url">bit.ly/pro</div>
    <div class="floating-link url">tiny.ly/abc</div>
    <div class="floating-link url">shrt.co/xyz</div>
    <div class="floating-link url">go2.me/123</div>

    <div class="dot"></div>
    <div class="dot"></div>

    <div class="container">
        <h2>Join URL Shortener</h2>
        <form id="signupForm">
            <div class="form-group">
                <label>Username</label>
                <input type="text" id="username" required minlength="3">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" id="email" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" id="password" required minlength="8">
                <span id="passwordError" class="error"></span>
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" id="confirmPassword" required>
                <span id="confirmPasswordError" class="error"></span>
            </div>
            <button type="submit">Create Account</button>
        </form>
        <div id="message"></div>
        <div class="login-link">
            Already have an account? <a href="/user/login">Login</a>
        </div>
    </div>

    <script>
        const form = document.getElementById('signupForm');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const message = document.getElementById('message');

            if (password !== confirmPassword) {
                message.textContent = 'Passwords do not match';
                message.style.color = '#e74c3c';
                return;
            }

            try {
                message.textContent = 'Creating account...';
                message.style.color = '#f39c12';
                const response = await fetch('/user/signup', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, email, password })
                });
                const data = await response.json();
                if (data.success) {
                    message.style.color = '#27ae60';
                    message.innerHTML = '‚úÖ Account created successfully!';
                    form.reset();
                } else {
                    message.style.color = '#e74c3c';
                    message.textContent = `‚ùå ${data.error}`;
                }
            } catch {
                message.style.color = '#e74c3c';
                message.textContent = '‚ùå Server error';
            }
        });
    </script>
</body>

</html>