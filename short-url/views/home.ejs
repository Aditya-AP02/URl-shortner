<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener Pro ðŸ”—</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 30%, #667eea 70%, #764ba2 100%);
            position: relative;
            min-height: 100vh;
            overflow-x: hidden;
            padding: 20px;
        }

        /* ANIMATED BACKGROUND ELEMENTS */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                radial-gradient(circle at 15% 25%, rgba(255, 255, 255, 0.15) 0%, transparent 40%),
                radial-gradient(circle at 85% 75%, rgba(255, 255, 255, 0.12) 0%, transparent 40%),
                radial-gradient(circle at 50% 10%, rgba(102, 126, 234, 0.2) 0%, transparent 50%),
                radial-gradient(circle at 10% 90%, rgba(118, 75, 162, 0.15) 0%, transparent 50%);
            z-index: -2;
            pointer-events: none;
            animation: glowShift 8s ease-in-out infinite;
        }

        /* FLOATING ELEMENTS */
        .link-chain,
        .url-element,
        .dot {
            position: fixed;
            z-index: -1;
        }

        .link-chain {
            width: 2px;
            height: 60px;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.5), transparent);
            border-radius: 2px;
            animation: float 6s ease-in-out infinite;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }

        .url-element {
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(15px);
            border-radius: 25px;
            padding: 8px 16px;
            font-size: 11px;
            color: rgba(255, 255, 255, 0.9);
            font-family: 'Courier New', monospace;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: pulse 4s ease-in-out infinite;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .url-element::before {
            content: 'ðŸ”—';
            font-size: 12px;
        }

        .dot {
            width: 6px;
            height: 6px;
            background: rgba(255, 255, 255, 0.6);
            border-radius: 50%;
            animation: dotFloat 7s ease-in-out infinite;
            box-shadow: 0 0 8px rgba(255, 255, 255, 0.4);
        }

        @keyframes glowShift {

            0%,
            100% {
                opacity: 1
            }

            50% {
                opacity: 0.8
            }
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0px)rotate(0deg);
                opacity: 0.5
            }

            50% {
                transform: translateY(-25px)rotate(8deg);
                opacity: 1
            }
        }

        @keyframes pulse {

            0%,
            100% {
                transform: scale(1)translateY(0);
                opacity: 0.8
            }

            50% {
                transform: scale(1.08)translateY(-8px);
                opacity: 1
            }
        }

        @keyframes dotFloat {

            0%,
            100% {
                transform: translateY(0)scale(1);
                opacity: 0.6
            }

            33% {
                transform: translateY(-15px)scale(1.2);
                opacity: 1
            }

            66% {
                transform: translateY(-5px)scale(0.8);
                opacity: 0.8
            }
        }

        /* POSITION FLOATING ELEMENTS */
        .link-chain:nth-child(1) {
            top: 10%;
            left: 5%;
            height: 80px;
            animation-delay: 0s
        }

        .link-chain:nth-child(2) {
            top: 60%;
            left: 90%;
            height: 100px;
            animation-delay: 1s
        }

        .link-chain:nth-child(3) {
            top: 80%;
            left: 10%;
            height: 70px;
            animation-delay: 2s
        }

        .link-chain:nth-child(4) {
            top: 30%;
            left: 85%;
            height: 90px;
            animation-delay: 3s
        }

        .link-chain:nth-child(5) {
            top: 20%;
            right: 5%;
            height: 60px;
            animation-delay: 4s
        }

        .url-element:nth-child(6) {
            top: 15%;
            right: 15%;
            animation-delay: 0.5s
        }

        .url-element:nth-child(7) {
            bottom: 30%;
            left: 5%;
            animation-delay: 1.5s
        }

        .url-element:nth-child(8) {
            top: 70%;
            right: 10%;
            animation-delay: 2.5s
        }

        .dot:nth-child(9) {
            top: 25%;
            left: 15%;
            animation-delay: 0s
        }

        .dot:nth-child(10) {
            bottom: 20%;
            right: 20%;
            animation-delay: 1s
        }

        .dot:nth-child(11) {
            top: 50%;
            left: 5%;
            animation-delay: 2s
        }

        .dot:nth-child(12) {
            top: 85%;
            right: 25%;
            animation-delay: 3s
        }

        .dot:nth-child(13) {
            bottom: 10%;
            left: 80%;
            animation-delay: 4s
        }

        .container {
            background: rgba(255, 255, 255, 0.97);
            backdrop-filter: blur(25px);
            padding: 40px;
            border-radius: 25px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
            width: 100%;
            max-width: 700px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            position: relative;
            z-index: 10;
            text-align: center;
            margin: 0 auto;
        }

        h1 {
            color: #1e3c72;
            font-size: 36px;
            font-weight: 800;
            margin-bottom: 10px;
            letter-spacing: -1px;
        }

        .tagline {
            color: #2a5298;
            font-size: 18px;
            margin-bottom: 30px;
            font-weight: 500;
        }

        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin: 40px 0;
        }

        .feature {
            padding: 20px;
            background: rgba(102, 126, 234, 0.1);
            border-radius: 15px;
            border-left: 4px solid #667eea;
        }

        .feature h3 {
            color: #1e3c72;
            margin-bottom: 8px;
            font-size: 16px;
        }

        .feature p {
            color: #555;
            font-size: 14px;
        }

        .shortener-form {
            background: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin: 30px 0;
        }

        .input-group {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
        }

        #urlInput {
            flex: 1;
            padding: 16px 20px;
            border: 2px solid #e8ecf4;
            border-radius: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        #urlInput:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
        }

        #shortenBtn {
            padding: 16px 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        #shortenBtn:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
        }

        #shortResult {
            margin-top: 20px;
            padding: 20px;
            background: rgba(39, 174, 96, 0.2);
            border-radius: 12px;
            display: none;
            flex-direction: column;
            gap: 10px;
        }

        .short-url {
            font-family: 'Courier New', monospace;
            font-size: 18px;
            color: #27ae60;
            word-break: break-all;
            background: white;
            padding: 12px;
            border-radius: 8px;
            border: 2px solid #27ae60;
        }

        .copy-btn,
        .analytics-btn {
            padding: 10px 20px;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .copy-btn {
            background: #27ae60;
        }

        .analytics-btn {
            background: #3498db;
        }

        .copy-btn:hover,
        .analytics-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        #analyticsSection {
            margin-top: 20px;
            display: none;
        }

        #analyticsData {
            background: rgba(248, 249, 250, 0.9);
            padding: 20px;
            border-radius: 12px;
            border-left: 4px solid #3498db;
        }

        .analytics-visit {
            padding: 8px;
            background: #f8f9fa;
            margin: 5px 0;
            border-radius: 6px;
            font-size: 14px;
        }

        .auth-links {
            margin-top: 30px;
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .auth-links a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            padding: 10px 20px;
            border-radius: 8px;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .auth-links a:hover {
            background: rgba(102, 126, 234, 0.1);
            border-color: #667eea;
        }

        @media (max-width: 768px) {
            .container {
                padding: 30px 20px;
                margin: 10px;
            }

            .input-group {
                flex-direction: column;
            }

            h1 {
                font-size: 28px;
            }
        }
    </style>
</head>

<body>
    <!-- 13 FLOATING ANIMATIONS -->
    <div class="link-chain"></div>
    <div class="link-chain"></div>
    <div class="link-chain"></div>
    <div class="link-chain"></div>
    <div class="link-chain"></div>
    <div class="url-element"></div>
    <div class="url-element"></div>
    <div class="url-element"></div>
    <div class="dot"></div>
    <div class="dot"></div>
    <div class="dot"></div>
    <div class="dot"></div>
    <div class="dot"></div>

    <div class="container">
        <h1>ðŸ”— URL Shortener Pro</h1>
        <p class="tagline">Shorten your links in seconds. Track clicks. Stay professional.</p>

        <div class="features">
            <div class="feature">
                <h3>âš¡ Lightning Fast</h3>
                <p>Instant shortening</p>
            </div>
            <div class="feature">
                <h3>ðŸ“Š Real-time Analytics</h3>
                <p>Track clicks & locations</p>
            </div>
            <div class="feature">
                <h3>ðŸ”’ Custom Domains</h3>
                <p>Brand your links</p>
            </div>
            <div class="feature">
                <h3>ðŸ’¾ Unlimited Storage</h3>
                <p>Never lose history</p>
            </div>
        </div>

        <div class="shortener-form">
            <div class="input-group">
                <input type="url" id="urlInput" placeholder="https://www.example.com/very/long/url/to/shorten">
                <button id="shortenBtn">Shorten URL</button>
            </div>
            <div id="shortResult">
                <div class="short-url" id="shortUrl"></div>
                <div style="display:flex; gap:10px; margin-top:10px;">
                    <button class="copy-btn" onclick="copyUrl()">ðŸ“‹ Copy</button>
                    <button class="analytics-btn" onclick="showAnalytics()" id="analyticsBtn">ðŸ“Š View Analytics</button>
                </div>
            </div>

            <!-- âœ… NEW ANALYTICS SECTION -->
            <div id="analyticsSection">
                <h3 style="color:#1e3c72; margin-bottom:15px;">ðŸ“Š Analytics Dashboard</h3>
                <div id="analyticsData"
                    style="background:rgba(248,249,250,0.9); padding:20px; border-radius:12px; border-left:4px solid #3498db;">
                    <p>Generate a short URL and click "View Analytics" to see click data!</p>
                </div>
            </div>
        </div>

        <div class="auth-links">
            <a href="/user/signup">Create Account</a>
            <a href="/user/login">Login</a>
        </div>
    </div>

    <script>
        const baseUrl = '<%= baseUrl %>';
        const urlInput = document.getElementById('urlInput');
        const shortenBtn = document.getElementById('shortenBtn');
        const shortResult = document.getElementById('shortResult');
        const shortUrl = document.getElementById('shortUrl');

        shortenBtn.addEventListener('click', async () => {
            const longUrl = urlInput.value.trim();
            if (!longUrl) return alert('Enter URL');

            try {
                shortenBtn.textContent = 'Shortening...';
                shortenBtn.disabled = true;

                const response = await fetch('/url/shorten', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ url: longUrl })
                });

                const data = await response.json();

                if (data.id) {
                    shortUrl.textContent = `${baseUrl}/url/${data.id}`;
                    shortResult.style.display = 'flex';
                    urlInput.value = '';
                    document.getElementById('analyticsSection').style.display = 'block';
                } else {
                    alert(data.error || 'Shortening failed');
                }
            } catch (error) {
                alert('Server error: ' + error.message);
            } finally {
                shortenBtn.textContent = 'Shorten URL';
                shortenBtn.disabled = false;
            }
        });

        window.copyUrl = () => {
            navigator.clipboard.writeText(shortUrl.textContent).then(() => {
                const btn = document.querySelector('.copy-btn');
                const original = btn.textContent;
                btn.textContent = 'âœ… Copied!';
                setTimeout(() => btn.textContent = original, 2000);
            });
        };

        // âœ… NEW ANALYTICS FUNCTION
        window.showAnalytics = async () => {
            const shortId = shortUrl.textContent.split('/url/')[1];
            if (!shortId) return alert('Generate a short URL first');

            try {
                document.getElementById('analyticsBtn').textContent = 'Loading...';
                document.getElementById('analyticsBtn').disabled = true;

                const response = await fetch(`/url/${shortId}/analytics`);
                const data = await response.json();

                document.getElementById('analyticsData').innerHTML = `
                    <div style="background:white; padding:20px; border-radius:12px; border-left:4px solid #3498db;">
                        <p><strong>ðŸ”¢ Total Clicks:</strong> <span style="color:#27ae60;font-size:20px;font-weight:bold;">${data.totalClicks}</span></p>
                        <p><strong>ðŸ”— Original URL:</strong> ${data.originalUrl.substring(0, 50)}${data.originalUrl.length > 50 ? '...' : ''}</p>
                        <h4 style="color:#1e3c72;margin:15px 0 10px 0;">ðŸ“ˆ Last Visits:</h4>
                        <div style="max-height:200px;overflow-y:auto;">
                            ${data.analytics.length ?
                        data.analytics.map(visit =>
                            `<div class="analytics-visit">${visit.timestamp}</div>`
                        ).join('') :
                        '<p style="color:#666;">No visits yet. Click your short URL first!</p>'
                    }
                        </div>
                    </div>
                `;
            } catch (error) {
                document.getElementById('analyticsData').innerHTML = '<p style="color:#e74c3c;">Analytics unavailable</p>';
            } finally {
                document.getElementById('analyticsBtn').textContent = 'ðŸ“Š View Analytics';
                document.getElementById('analyticsBtn').disabled = false;
            }
        };
    </script>
</body>

</html>